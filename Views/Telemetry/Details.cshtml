@model IEnumerable<JsonParser.Models.TelemetryNode>

@{
    ViewData["Title"] = "View";
}

<h1>Content</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Output)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            int indent = item.Level * 20;
            string indentStr = indent + "px";
            <tr>
            <td>
                <p style = "text-indent:@indentStr">@item.Type</p>
            </td>
            <td>
                    @if (item.Type == "Table:")
                    {
                        <a asp-action="Table" asp-controller="Telemetry" asp-route-id="@item.Output">@item.Output</a>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Output)
                    }
                    
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            
        </tr>
}
    </tbody>
</table>
