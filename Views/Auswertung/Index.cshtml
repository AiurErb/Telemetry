@model List<TableItem>

<h1>Tabellen in den Datenbanken</h1>
<table style="width:100%">
    <tr>
        <th>Name</th>
        <th>Anzahl der Zeilen</th>
        <th>Datenbank</th>
        <th>Trancate</th>
    </tr>
    @foreach (TableItem table in Model)
    {
        <tr>
            <td><a href="auswertung/table?table=@table.Table&db=@table.Database">@table.Table</a></td>
            <td>@table.Count</td>
            <td>@table.Database</td>
            <td><a href="auswertung/trancate?table=@table.Table&db=@table.Database">[X]</a></td>
        </tr>
    }
</table>
<br/>
<p><a href="auswertung/parserawdata">Daten herunterladen</a></p>
<p><a href="auswertung/cleardata">Daten löschen</a></p>

